{
  "version": "0.2.5",
  "name": "@m3o/marco.deno.dev",
  "exports": "./main.ts",
  "workspace": ["packages/auth/", "packages/errors/"],
  "unstable": [
    "cron",
    "kv"
  ],
  "nodeModulesDir": "auto",
  "lint": {
    "exclude": [
      "node_modules/",
      "static/"
    ]
  },
  "fmt": {
    "exclude": [
      "node_modules/",
      "static/",
      "posts/*.md"
    ]
  },
  "imports": {
    "@std/dotenv": "jsr:@std/dotenv@^0.225.2",
    "@libs/markdown": "jsr:@libs/markdown@^2.0.0",
    "@std/yaml": "jsr:@std/yaml@^1.0.5",
    "daisyui": "npm:daisyui@^4.12.14",
    "hono": "jsr:@hono/hono@^4.6.12",
    "tailwindcss": "npm:tailwindcss@^3.4.15",
    "typed-htmx": "npm:typed-htmx@^0.3.1",
    "unist-util-visit": "npm:unist-util-visit@^5.0.0",
    "zod": "https://deno.land/x/zod@v3.16.1/mod.ts",
    "~/": "./src/"
  },
  "tasks": {
    "fmt": "deno fmt && deno lint",
    "tw-tokens": "deno run -A npm:tailwindcss -i ./static/css/styles.css -o ./static/css/styles.min.css",

    "encrypt": "pkg encrypt .env",
    "decrypt": "pkg decrypt .env.gpg",

    "init": {
      "description": "generate task",
      "command": "deno install",
      "dependencies": ["tw-tokens"]
    },

    "release": {
      "description": "Release a new version",
      "command": "deno run -A jsr:@m3o/version && git push",
      "dependencies": ["init"]
    },

    "start": {
      "description": "Start the dev server",
      "command": "deno run -REN --allow-run='deno' --allow-sys --watch main.ts",
      "dependencies": ["init", "fmt"]
    }
  },
  "compilerOptions": {
    "jsx": "precompile",
    "lib": [
      "deno.ns",
      "deno.unstable",
      "dom"
    ],
    "jsxImportSource": "hono/jsx"
  }
}
